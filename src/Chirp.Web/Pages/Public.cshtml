@page "/"
@using Chirp.Core
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>
    @if (User.Identity?.IsAuthenticated == true)
    {
    <div class="cheepbox">
        <h3>What's on your mind @((await Model.Author).DisplayName)?</h3>
        <form method="post">
            <input style="float: left" type="text" asp-for="Text" maxlength="160" id="cheepText" oninput="checkCharacterLimit()" >
            <input type="submit" value="Share">
            <span id="charLimitMessage" style="color: red; display: none; flex: 1"> hey cutie, you can write a maximum of 160 characters.. sry</span>
        </form>
    </div>
    }

    <script>
    function checkCharacterLimit() {
        var cheepInput = document.getElementById("cheepText");
        var message = document.getElementById("charLimitMessage");
        if (cheepInput.value.length >= 160) {
            message.style.display = "inline";  // Show message
        } else {
            message.style.display = "none";  // Hide message if under limit
        }
    }
</script>


    <script>
    function checkCharacterLimit() {
        var cheepInput = document.getElementById("cheepText");
        var message = document.getElementById("charLimitMessage");

        if (cheepInput.value.length >= 160) {
            message.style.display = "inline";  // Show message
        } else {
            message.style.display = "none";  // Hide message if under limit
        }
    }
</script>

    @if ((await Model.Cheeps).Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in await Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author.UserName">@cheep.Author.DisplayName</a>
                        </strong>
                        <button class="follow-btn" data-author-username="@cheep.Author.UserName">Follow</button>
                        <br/>
                        @cheep.Text
                        <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }

    <div class="pagination" style="display: flex; justify-content: center; align-items: center; margin: 20px 0;">
        @{
            int currentPage = Model.CurrentPage;

            if (currentPage > 1)
            {
                <a href="?page=@(currentPage - 1)" class="prev" style="margin-right: 10px;">
                    <button>Previous</button>
                </a>
            }

            <span class="current-page">@currentPage</span>

            <a href="?page=@(currentPage + 1)" class="next" style="margin-left: 10px;">
                <button>Next</button>
            </a>
        }
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const followButtons = document.querySelectorAll('.follow-btn');
            const followedAuthors = new Set(); // Use a Set to track followed authors

            followButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const authorId = this.dataset.authorId;

                    // Toggle follow state based on whether the author is followed or not
                    if (followedAuthors.has(authorId)) {
                        this.innerText = 'Follow';
                        followedAuthors.delete(authorId); // Remove from the followed set
                    } else {
                        this.innerText = 'Unfollow';
                        followedAuthors.add(authorId); // Add to the followed set
                    }

                    // Optional: Handle any additional follow/unfollow logic, such as making API calls
                    console.log(`Follow state changed for Author ID: ${authorId}`);
                });
            });
        });
    </script>

</div>

